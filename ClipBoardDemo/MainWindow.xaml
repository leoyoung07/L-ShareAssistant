<Window x:Class="ClipBoardDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClipBoardDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" SourceInitialized="Window_SourceInitialized" Closed="Window_Closed">
    <Grid>
        <Button x:Name="copyButton" Content="Copy" HorizontalAlignment="Left" Margin="45,65,0,0" VerticalAlignment="Top" Width="75" Click="copyButton_Click"/>
        <TextBox x:Name="copyTextBox" HorizontalAlignment="Left" Height="129" Margin="191,25,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="235" AcceptsReturn="True" AcceptsTab="True" VerticalScrollBarVisibility="Auto"/>
        <Button x:Name="pasteButton" Content="Paste" HorizontalAlignment="Left" Margin="45,237,0,0" VerticalAlignment="Top" Width="75" Click="pasteButton_Click"/>
        <TextBox x:Name="pasteTextBox" HorizontalAlignment="Left" Height="118" Margin="191,174,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="235" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" AcceptsTab="True"/>
        <Label x:Name="infoLabel" Content="" HorizontalAlignment="Left" Margin="45,281,0,0" VerticalAlignment="Top" Width="94"/>

    </Grid>
</Window>
