<Window x:Class="L_ShareAssistant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:L_ShareAssistant"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Closing="Window_Closing">
    <Grid>
        <TextBox x:Name="localIpTextBox" HorizontalAlignment="Left" Height="23" Margin="24,58,0,0" TextWrapping="Wrap" Text="192.168.1.108" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="debugTextBox" HorizontalAlignment="Left" Height="208" Margin="261,58,0,0" Text="" VerticalAlignment="Top" Width="231" TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True" VerticalScrollBarVisibility="Auto"/>
        <Button x:Name="startButton" Content="Start" HorizontalAlignment="Left" Margin="163,62,0,0" VerticalAlignment="Top" Width="75" Click="startButton_Click"/>
        <TextBox x:Name="messageTextBox" HorizontalAlignment="Left" Height="23" Margin="24,163,0,0" TextWrapping="Wrap" Text="Hello, world!" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="sendMessageButton" Content="Send" HorizontalAlignment="Left" Margin="163,167,0,0" VerticalAlignment="Top" Width="75" Click="sendMessageButton_Click"/>

    </Grid>
</Window>
